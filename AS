int sum(int A[], int from, int to) {
  int total = 0;
  for (int i = from; i <= to; i++)
    total += A[i];
  return total;
}
 
int partition(int A[], int n, int k) {
  if (k == 1)
    return sum(A, 0, n-1);
  if (n == 1)
    return A[0];
 
  int best = INT_MAX;
  for (int j = 1; j <= n; j++)
    best = min(best, max(partition(A, j, k-1), sum(A, j, n-1)));
 
  return best;
}
